<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="#ffffff" >

      <!-- Header Starts -->
      <!-- Header Ends -->


      <!-- Footer Start -->
      <!-- Footer Ends -->


      <!-- Login Form -->
      <!-- Login Form Ends -->

      <LinearLayout
          android:id="@+id/header"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:background="#ffffff"
          android:orientation="vertical"
          android:paddingBottom="5dip"
          android:paddingTop="5dip" >
      </LinearLayout>

      <Button
          android:id="@+id/get_blood_pressure"
          android:layout_width="250dp"
          android:layout_height="35dp"
          android:layout_above="@+id/get_height_weight"
          android:layout_alignParentLeft="true"
          android:text="Blood Pressure"
          android:textSize="15dp" />

      <Button
          android:id="@+id/get_temperature"
          android:layout_width="250dp"
          android:layout_height="35dp"
          android:layout_above="@+id/get_blood_pressure"
          android:layout_alignParentLeft="true"
          android:text="Temperature"
          android:textSize="15dp" />

      <Button
          android:id="@+id/get_medication"
          android:layout_width="250dp"
          android:layout_height="35dp"
          android:layout_above="@+id/get_temperature"
          android:layout_alignParentLeft="true"
          android:text="Medication"
          android:textSize="15dp" />

      <Button
          android:id="@+id/get_blood_sugar"
          android:layout_width="250dp"
          android:layout_height="35dp"
          android:layout_above="@+id/get_medication"
          android:layout_alignParentLeft="true"
          android:text="Blood Sugar"
          android:textSize="15dp" />

      <Button
          android:id="@+id/get_immunization"
          android:layout_width="250dp"
          android:layout_height="35dp"
          android:layout_above="@+id/get_blood_sugar"
          android:layout_alignParentLeft="true"
          android:text="Immunization"
          android:textSize="15dp" />

      <Button
          android:id="@+id/get_allergy"
          android:layout_width="250dp"
          android:layout_height="35dp"
          android:layout_above="@+id/get_immunization"
          android:layout_alignParentLeft="true"
          android:text="Allergies"
          android:textSize="15dp" />

      <Button
          android:id="@+id/add_immunization"
          android:layout_width="50dp"
          android:layout_height="35dp"
          android:layout_alignLeft="@+id/add_allergy"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/get_allergy"
          android:text="+"
          android:textSize="15dp" />

      <Button
          android:id="@+id/add_blood_sugar"
          android:layout_width="50dp"
          android:layout_height="35dp"
          android:layout_above="@+id/get_medication"
          android:layout_alignLeft="@+id/add_immunization"
          android:layout_alignParentRight="true"
          android:text="+"
          android:textSize="15dp" />

      <Button
          android:id="@+id/add_medication"
          android:layout_width="50dp"
          android:layout_height="35dp"
          android:layout_above="@+id/get_temperature"
          android:layout_alignLeft="@+id/add_blood_sugar"
          android:layout_alignParentRight="true"
          android:text="+"
          android:textSize="15dp" />

      <Button
          android:id="@+id/add_blood_pressure"
          android:layout_width="50dp"
          android:layout_height="35dp"
          android:layout_above="@+id/get_height_weight"
          android:layout_alignLeft="@+id/add_temperature_1"
          android:layout_alignParentRight="true"
          android:text="+"
          android:textSize="15dp" />

      <Button
          android:id="@+id/add_height_weight"
          android:layout_width="50dp"
          android:layout_height="35dp"
          android:layout_alignBaseline="@+id/get_height_weight"
          android:layout_alignBottom="@+id/get_height_weight"
          android:layout_alignLeft="@+id/add_blood_pressure"
          android:layout_alignParentRight="true"
          android:text="+"
          android:textSize="15dp" />

      <Button
          android:id="@+id/add_emergency_contact"
          android:layout_width="50dp"
          android:layout_height="35dp"
          android:layout_alignBaseline="@+id/get_emergency_contact"
          android:layout_alignBottom="@+id/get_emergency_contact"
          android:layout_alignLeft="@+id/add_height_weight"
          android:layout_alignParentRight="true"
          android:text="+"
          android:textSize="15dp" />

      <Button
          android:id="@+id/get_height_weight"
          android:layout_width="250dp"
          android:layout_height="35dp"
          android:layout_above="@+id/get_emergency_contact"
          android:layout_alignParentLeft="true"
          android:text="Height &amp; Weight"
          android:textSize="15dp" />

      <Button
          android:id="@+id/get_emergency_contact"
          android:layout_width="250dp"
          android:layout_height="35dp"
          android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true"
          android:layout_marginBottom="25dp"
          android:text="Emergency Contact"
          android:textSize="15dp" />

      <Button
          android:id="@+id/add_allergy"
          android:layout_width="50dp"
          android:layout_height="35dp"
          android:layout_alignBaseline="@+id/get_allergy"
          android:layout_alignBottom="@+id/get_allergy"
          android:layout_alignParentRight="true"
          android:layout_toRightOf="@+id/get_allergy"
          android:text="+"
          android:textSize="15dp" />

      <TextView
          android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/personal_info"
          android:layout_below="@+id/header"
          android:layout_marginTop="16dp"
          android:text="Welcome, User"
          android:textColor="#000" />

      <Button
          android:id="@+id/personal_info"
          android:layout_width="125dp"
          android:layout_height="35dp"
          android:layout_alignTop="@+id/profile_picture"
          android:layout_toRightOf="@+id/profile_picture"
          android:text="Personal Info"
          android:textSize="15dp" />

      <Button
          android:id="@+id/add_temperature_1"
          android:layout_width="50dp"
          android:layout_height="35dp"
          android:layout_alignLeft="@+id/add_medication"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/add_medication"
          android:text="+"
          android:textSize="15dp" />

      <ImageView
          android:id="@+id/profile_picture"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/textView1"
          android:src="@drawable/profile" />

      <Button
          android:id="@+id/view_caretakers"
          android:layout_width="150dp"
          android:layout_height="35dp"
          android:layout_alignBaseline="@+id/contact_info"
          android:layout_alignBottom="@+id/contact_info"
          android:layout_alignParentRight="true"
          android:text="View Caretakers"
          android:textSize="15dp" />

      <Button
          android:id="@+id/account_info"
          android:layout_width="150dp"
          android:layout_height="35dp"
          android:layout_above="@+id/contact_info"
          android:layout_alignParentRight="true"
          android:text="Account Info"
          android:textSize="15dp" />

      <Button
          android:id="@+id/contact_info"
          android:layout_width="125dp"
          android:layout_height="35dp"
          android:layout_alignLeft="@+id/personal_info"
          android:layout_below="@+id/personal_info"
          android:text="Contact Info"
          android:textSize="15dp" />

  </RelativeLayout>

</ScrollView>