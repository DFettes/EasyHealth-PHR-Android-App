<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="#ffffff" >

      <!-- Header Starts -->
      <!-- Header Ends -->


      <!-- Footer Start -->
      <!-- Footer Ends -->


      <!-- Login Form -->
      <!-- Login Form Ends -->

      <LinearLayout
          android:id="@+id/header"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:background="#ffffff"
          android:orientation="vertical"
          android:paddingBottom="5dip"
          android:paddingTop="5dip" >
      </LinearLayout>

      <Button
          android:id="@+id/edit_account_info"
          android:layout_width="150dp"
          android:layout_height="35dp"
          android:layout_above="@+id/back_edit_account_info"
          android:layout_centerHorizontal="true"
          android:text="Edit Account Info"
          android:textSize="15dp" />

      <Button
          android:id="@+id/back_edit_account_info"
          android:layout_width="150dp"
          android:layout_height="35dp"
          android:layout_alignLeft="@+id/edit_account_info"
          android:layout_alignParentBottom="true"
          android:text="Cancel"
          android:textSize="15dp" />

      <EditText
          android:id="@+id/edit_account_info_current_password"
          android:layout_width="175dp"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/header"
          android:layout_marginRight="20dp"
          android:layout_marginTop="40dp"
          android:ems="10"
          android:hint="Enter Current Password"
          android:singleLine="true" 
          android:inputType="textPassword"
          android:password="true"/>

      <requestFocus
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <EditText
          android:id="@+id/edit_account_info_new_password"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/edit_account_info_current_password"
          android:layout_alignRight="@+id/edit_account_info_current_password"
          android:layout_below="@+id/edit_account_info_current_password"
          android:ems="10"
          android:hint="Enter New Password"
          android:singleLine="true" 
          android:inputType="textPassword"
          android:password="true"/>

      <EditText
          android:id="@+id/edit_account_info_security_question"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/edit_account_info_new_password"
          android:layout_alignRight="@+id/edit_account_info_new_password"
          android:layout_below="@+id/edit_account_info_new_password"
          android:ems="10"
          android:hint="Enter Sequrity Question"
          android:singleLine="true" />

      <EditText
          android:id="@+id/edit_account_info_health_card_number"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/edit_account_info_security_answer"
          android:layout_alignRight="@+id/edit_account_info_security_answer"
          android:layout_below="@+id/edit_account_info_security_answer"
          android:ems="10"
          android:hint="Enter OHIP Number"
          android:singleLine="true" 
          android:inputType="number" />

      <EditText
          android:id="@+id/edit_account_info_security_answer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/edit_account_info_security_question"
          android:layout_alignRight="@+id/edit_account_info_security_question"
          android:layout_below="@+id/edit_account_info_security_question"
          android:ems="10"
          android:hint="Enter Security Answer"
          android:singleLine="true" />

      <TextView
          android:id="@+id/TextView01"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/edit_account_info_new_password"
          android:layout_alignBottom="@+id/edit_account_info_new_password"
          android:layout_alignLeft="@+id/textView1"
          android:text="New Password:"
          android:textColor="#000"
          android:textSize="14sp" />

      <TextView
          android:id="@+id/TextView02"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/edit_account_info_security_question"
          android:layout_alignBottom="@+id/edit_account_info_security_question"
          android:layout_alignLeft="@+id/TextView01"
          android:text="Secuirty Question:"
          android:textColor="#000"
          android:textSize="14sp" />

      <TextView
          android:id="@+id/TextView03"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/edit_account_info_security_answer"
          android:layout_alignBottom="@+id/edit_account_info_security_answer"
          android:layout_alignLeft="@+id/TextView02"
          android:text="Security Answer:"
          android:textColor="#000"
          android:textSize="14sp" />

      <TextView
          android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/edit_account_info_current_password"
          android:layout_alignBottom="@+id/edit_account_info_current_password"
          android:layout_alignParentLeft="true"
          android:layout_marginLeft="14dp"
          android:text="Current Password:"
          android:textColor="#000"
          android:textSize="14sp" />

      <TextView
          android:id="@+id/TextView04"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/edit_account_info_health_card_number"
          android:layout_alignBottom="@+id/edit_account_info_health_card_number"
          android:layout_alignLeft="@+id/TextView03"
          android:text="OHIP Number:"
          android:textColor="#000"
          android:textSize="14sp" />

  </RelativeLayout>

</ScrollView>